{
  "name":"kanity",
  "description":"A Simple Game Engine",
  "license":"MIT",
  "authors":[
    "Tosuke",
    "otya128",
    "atnanasi",
    "Citringo"
  ],
  "dependencies":{
    "derelict-sdl2":"~master",
    "derelict-gl3":"~master",
    "kanity:luad": "~master",
  },
  "targetType":"executable",
  "preBuildCommands": [ "git submodule update" ],
  "targetPath":"bin",
  "workingDirectory":"bin",
  "copyFiles":["resources"],
  "stringImportPaths":["buildConfig"],
  "subPackages": [
      "./LuaD/"
  ],
  "sourcePaths":[],
  "configurations":[
    {
      "name":"engine",
      "sourcePaths":["source"]
    },
    {
      "name":"mapeditor",
      "sourcePaths":["mapeditor/source", "source/kanity"]
    }
  ]
}
